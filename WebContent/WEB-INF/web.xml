<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>A Small Web Application</display-name>

  <servlet>
    <servlet-name>Assignment1CookieServlet</servlet-name>
    <servlet-class>com.w3epic.wiprotraining.assignment1.Assignment1Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Assignment1CookieServlet</servlet-name>
    <url-pattern>/cookies.arp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Assignment2CookieServlet</servlet-name>
    <servlet-class>com.w3epic.wiprotraining.assignment2.Assignment2Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Assignment2CookieServlet</servlet-name>
    <url-pattern>/cookies2.arp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Assignment2SessionServlet</servlet-name>
    <servlet-class>com.w3epic.wiprotraining.assignment3.Assignment3Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Assignment2SessionServlet</servlet-name>
    <url-pattern>/sessions.arp</url-pattern>
  </servlet-mapping>

</web-app>